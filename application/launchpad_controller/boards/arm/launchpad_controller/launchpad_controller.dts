&spi3 {
	status = "okay";
	pinctrl-0 = <&spi3_sck_pc10 &spi3_miso_pc11 &spi3_mosi_pc12>;
	pinctrl-names = "default";
	cs-gpios = <&gpioe 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
	 <&gpioe 9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
	 <&gpioe 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
};

