 &rcc {
	 clocks = <&pll>;
	 clock-frequency = <DT_FREQ_M(550)>;
	 d1cpre = <1>;
	 hpre = <2>;    /* HCLK: 275   MHz */
	 d1ppre = <4>;  /* APB1: 137.5 MHz */
	 d2ppre1 = <4>; /* APB2: 137.5 MHz */
	 d2ppre2 = <4>; /* APB3: 137.5 MHz */
	 d3ppre = <2>;  /* APB4: 137.5 MHz */
 };

